# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown,mdown,mkdn,mkd,mdwn,mkdown,ron}]
indent_size = 4

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_style = tab
